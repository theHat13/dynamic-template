<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <header class="mb-10 text-center">
        <h1 class="text-3xl font-bold mb-3">HAT Design System</h1>
        <p class="text-gray-600 max-w-2xl mx-auto">A collection of reusable components to build consistent interfaces quickly and efficiently.</p>
    </header>

    <!-- Table of contents -->
    <nav class="mb-10 p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-xl font-bold mb-4">Components</h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 gap-2">
            <li>
                <a href="#link" class="text-blue-600 hover:underline">Link</a>
            </li>
            <li>
                <a href="#tag" class="text-blue-600 hover:underline">Tag</a>
            </li>
            <li>
                <a href="#chip" class="text-blue-600 hover:underline">Chip</a>
            </li>
            <li>
                <a href="#tooltip" class="text-blue-600 hover:underline">Tooltip</a>
            </li>
            <li>
                <a href="#select" class="text-blue-600 hover:underline">Select</a>
            </li>
            <li>
                <a href="#input-text" class="text-blue-600 hover:underline">Input Text</a>
            </li>
            <li>
                <a href="#input-select" class="text-blue-600 hover:underline">Input Select</a>
            </li>
            <li>
                <a href="#input-multi-select" class="text-blue-600 hover:underline">Multi-Select</a>
            </li>
        </ul>
    </nav>

    <!-- Components Documentation -->

    <!-- Link component -->
    <section id="link" class="mb-12 p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-bold mb-2">Link</h2>
        <p class="text-gray-600 mb-6">Standard hyperlink for navigation.</p>

        <!-- Examples -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">Examples</h3>
            <div class="p-4 bg-gray-50 rounded mb-4 flex gap-4">
                {{ renderLink(links.link_data.link_home) }}
            </div>
        </div>

        <!-- API Quick Reference -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">API</h3>
            <div class="overflow-x-auto">
                <table class="min-w-full border border-gray-200">
                    <thead>
                        <tr class="bg-gray-50">
                            <th class="px-4 py-2 border-b text-left">Parameter</th>
                            <th class="px-4 py-2 border-b text-left">Type</th>
                            <th class="px-4 py-2 border-b text-left">Required</th>
                            <th class="px-4 py-2 border-b text-left">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="px-4 py-2 border-b">option</td>
                            <td class="px-4 py-2 border-b">object</td>
                            <td class="px-4 py-2 border-b">Yes</td>
                            <td class="px-4 py-2 border-b">Contains href and text properties</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Code Example -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">Usage</h3>
            <pre class="bg-gray-800 text-white p-4 rounded overflow-x-auto"><code>{% raw %}{% from "03-atoms-navigation/link.njk" import renderlink %}
{{ renderlink(links.link_home) }}{% endraw %}</code></pre>
        </div>

        <!-- Tips -->
        <div>
            <h3 class="text-lg font-semibold mb-3">Tips</h3>
            <ul class="list-disc pl-5 space-y-1 text-gray-700">
                <li>Use descriptive link text instead of generic phrases like "click here"</li>
                <li>Links should be visually distinct from regular text</li>
            </ul>
        </div>
    </section>

    <!-- Input Text component -->
    <section id="input-text" class="mb-12 p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-bold mb-2">Input Text</h2>
        <p class="text-gray-600 mb-6">Text input field for user data entry.</p>

        <!-- Examples -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">Examples</h3>

            {% if input_text and input_text.examples %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                    {% for example in input_text.examples %}
                        <div class="p-4 bg-gray-50 rounded">
                            <h4 class="font-semibold mb-2">{{ example.label }}</h4>
                            {{ renderInputText(
                                id=example.id,
                                name=example.name,
                                label=example.label,
                                required=example.required,
                                placeholder=example.placeholder,
                                type=example.type,
                                className="",
                                disabled=example.disabled,
                                critical=example.critical
                            ) }}
                            <p class="text-sm text-gray-600 mt-2">{{ example.note }}</p>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <!-- Fallback examples -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
                    <div class="p-4 bg-gray-50 rounded">
                        <h4 class="font-semibold mb-2">Standard</h4>
                        {{ renderInputText(
                            id="username",
                            name="username",
                            label="Username",
                            placeholder="Enter your username"
                        ) }}
                    </div>
                    <div class="p-4 bg-gray-50 rounded">
                        <h4 class="font-semibold mb-2">Required</h4>
                        {{ renderInputText(
                            id="email",
                            name="email",
                            label="Email",
                            required=true,
                            placeholder="Enter your email",
                            type="email"
                        ) }}
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- API Quick Reference -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">API</h3>
            <div class="overflow-x-auto">
                <table class="min-w-full border border-gray-200">
                    <thead>
                        <tr class="bg-gray-50">
                            <th class="px-4 py-2 border-b text-left">Parameter</th>
                            <th class="px-4 py-2 border-b text-left">Type</th>
                            <th class="px-4 py-2 border-b text-left">Required</th>
                            <th class="px-4 py-2 border-b text-left">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if input_text and input_text.params %}
                            {% for param in input_text.params %}
                                <tr>
                                    <td class="px-4 py-2 border-b">{{ param.name }}</td>
                                    <td class="px-4 py-2 border-b">{{ param.type }}</td>
                                    <td class="px-4 py-2 border-b">{{ "Yes" if param.required else "No" }}</td>
                                    <td class="px-4 py-2 border-b">{{ param.notes }}</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td class="px-4 py-2 border-b">id</td>
                                <td class="px-4 py-2 border-b">string</td>
                                <td class="px-4 py-2 border-b">Yes</td>
                                <td class="px-4 py-2 border-b">Unique identifier</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2 border-b">name</td>
                                <td class="px-4 py-2 border-b">string</td>
                                <td class="px-4 py-2 border-b">Yes</td>
                                <td class="px-4 py-2 border-b">Field name in form</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2 border-b">label</td>
                                <td class="px-4 py-2 border-b">string</td>
                                <td class="px-4 py-2 border-b">Yes</td>
                                <td class="px-4 py-2 border-b">Label text</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Code Example -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">Usage</h3>
            <pre class="bg-gray-800 text-white p-4 rounded overflow-x-auto"><code>{% raw %}{% from "03-atoms-form/input-text.njk" import renderinputtext %}
{{ renderinputtext(
  id="username",
  name="username",
  label="username",
  required=true,
  placeholder="enter your username"
) }}{% endraw %}</code></pre>
        </div>

        <!-- Tips -->
        <div>
            <h3 class="text-lg font-semibold mb-3">Tips</h3>
            <ul class="list-disc pl-5 space-y-1 text-gray-700">
                {% if input_text and input_text.tips %}
                    {% for tip in input_text.tips %}
                        <li>{{ tip }}</li>
                    {% endfor %}
                {% else %}
                    <li>Always provide a meaningful label</li>
                    <li>Use placeholder text for hints, not to replace labels</li>
                    <li>Indicate required fields with an asterisk (*)</li>
                {% endif %}
            </ul>
        </div>
    </section>

    <!-- Tag component -->
    <section id="tag" class="mb-12 p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-bold mb-2">Tag</h2>
        <p class="text-gray-600 mb-6">Labels to categorize or highlight content.</p>

        <!-- Examples -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">Examples</h3>
            <div class="p-4 bg-gray-50 rounded mb-4">
                {% include "03-atoms-notifications/tag.njk" %}
            </div>
        </div>

        <!-- Code Example -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-3">Usage</h3>
            <pre class="bg-gray-800 text-white p-4 rounded overflow-x-auto"><code>{% raw %}<span class="tag tag-default">default tag</span>
<span class="tag tag-success">success tag</span>{% endraw %}</code></pre>
        </div>
    </section>

    <!-- Continue with other components following the same structure -->

</div>
{
    "name": "Tooltip",
    "description": "Informative hover tooltip component for providing additional context",
    "variants": [
      {
        "name": "default",
        "class": "tooltip--default bg-gray-800 text-white rounded-md shadow-lg"
      },
      {
        "name": "info",
        "class": "tooltip--info bg-blue-600 text-white rounded-md shadow-lg"
      },
      {
        "name": "warning",
        "class": "tooltip--warning bg-yellow-500 text-black rounded-md shadow-lg"
      }
    ],
    "defaultProps": {
      "variant": "default"
    },
    "accessibility": {
      "roles": ["tooltip"],
      "keyboardInteractions": ["Hover", "Focus"]
    }
  }
{
    "name": "Link",
    "description": "Navigational link component with multiple style variants",
    "variants": [
      {
        "name": "default",
        "class": "link--default text-gray-800 hover:text-gray-600 transition-colors duration-200",
        "styles": {
          "color": "#2d3748",
          "hoverColor": "#4a5568"
        }
      },
      {
        "name": "primary",
        "class": "link--primary text-blue-600 hover:text-blue-800 underline transition-colors duration-200",
        "styles": {
          "color": "#3182ce",
          "hoverColor": "#2c5282"
        }
      },
      {
        "name": "secondary",
        "class": "link--secondary text-gray-500 hover:text-gray-700 transition-colors duration-200",
        "styles": {
          "color": "#718096",
          "hoverColor": "#4a5568"
        }
      }
    ],
    "defaultProps": {
      "variant": "default"
    },
    "accessibility": {
      "roles": ["link"],
      "keyboardInteractions": ["Enter", "Space"]
    }
  }
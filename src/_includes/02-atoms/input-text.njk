<!-- ========================= -->
<!--        INPUT TEXT        -->
<!-- ========================= -->

{% macro renderInputText(id, name, label, required = false, placeholder = "", value = "", type = "text", className = "", disabled = false, critical = false) %}
<div>
  <label for="{{ id }}" class="block typography-label-l {% if critical %}text-danger{% endif %}">
    {{ label }} {% if required %}*{% endif %}
  </label>
  
  <input 
    type="{{ type }}" 
    id="{{ id }}" 
    name="{{ name }}"
    placeholder="{{ placeholder }}" 
    value="{{ value }}"
    class="input {% if critical %}critical{% endif %} {{ className }}"
    {% if disabled %}disabled{% endif %}
  />
</div>
{% endmacro %}

<!-- ========================= -->
<!-- HOW TO USE THIS COMPONENT -->
<!-- ========================= -->

<!-- 1. Import the macro at the top of your page -->
{# {% from "02-atoms-form/input-text.njk" import renderInputText %} #}

<!-- 2. Insert the component in your template -->
{# {{ renderInputText(
  id="username",
  name="username", 
  label="Username", 
  required=true, 
  placeholder="Enter your username", 
  type="text"
) }} #}

<!-- 3. Options:
  - id: ID attribute for the input (required)
  - name: Name attribute for the input (required)
  - label: Label text (required)
  - required: Whether the field is required (default: false)
  - placeholder: Placeholder text (default: "")
  - value: Initial value (default: "")
  - type: Input type (default: "text")
  - className: Additional CSS classes (default: "")
  - disabled: Whether the input is disabled (default: false)
  - critical: Whether to show in error state (default: false)
-->
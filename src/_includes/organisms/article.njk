---
layout: 'organisms-global/base.njk'
---

<!-- Article section -->
<article class="py-12 bg-gray-50">

    <div class="container container--narrow mx-auto px-4">

        <!-- Article title -->
        <h1 class="text-4xl font-bold text-gray-900 mb-6">
            {{ title }}
        </h1>

        <!-- Article image with caption -->
        <figure class="mb-8">
            <img src="{{ image }}" alt="{{ imageAlt }}" class="w-full h-auto rounded-lg shadow-lg">
            <figcaption class="text-center text-sm text-gray-500 mt-2">
                {{ imageAlt }}
            </figcaption>
        </figure>

        <!-- Article content -->
        <div class="text-gray-800">
            {{ content | safe }}
        </div>

    </div>

</article>

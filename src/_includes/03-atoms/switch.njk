{% macro renderSwitch(options) %}
  {% set switchData = options.datas.switchs | selectattr('name', 'equalto', options.name) | first %}
  {% set globalStyle = options.datas.globalStyle %}
  {% set variantStyle = options.datas.variants[switchData.style] %}
  
  {% if switchData %}
    <div 
      class="{{ globalStyle }} {{ variantStyle }}"
    >
      {{ switchData.text }}
    </div>
  {% else %}
    <span class="text-red-500">Switch not found</span>
  {% endif %}
{% endmacro %}



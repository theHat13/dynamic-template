{% macro renderHeading(options) %}
  {% set headingData = options.datas.headings | selectattr('name', 'equalto', options.name) | first %}
  {% set globalStyle = options.datas.globalStyle %}
  {% set variantStyle = options.datas.variants[headingData.style] %}
  
  {% if headingData %}
    <div 
      class="{{ globalStyle }} {{ variantStyle }}"
    >
      {{ headingData.text }}
    </div>
  {% else %}
    <span class="text-red-500">Heading not found</span>
  {% endif %}
{% endmacro %}



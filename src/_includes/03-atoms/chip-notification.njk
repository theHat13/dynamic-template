{% macro renderChipNotification(options) %}
  {% set chip-notificationData = options.datas.chip-notifications | selectattr('name', 'equalto', options.name) | first %}
  {% set globalStyle = options.datas.globalStyle %}
  {% set variantStyle = options.datas.variants[chip-notificationData.style] %}
  
  {% if chip-notificationData %}
    <div 
      class="{{ globalStyle }} {{ variantStyle }}"
    >
      {{ chip-notificationData.text }}
    </div>
  {% else %}
    <span class="text-red-500">ChipNotification not found</span>
  {% endif %}
{% endmacro %}



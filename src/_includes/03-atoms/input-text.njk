{% macro renderInputText(id, name, label, variant = "default", placeholder = "", value = "", required = false, errorMessage = "") %}
<div class="mb-4">
  <label 
    for="{{ id }}" 
    class="block mb-2 {{ input_text.variants[variant].label }}"
  >
    {{ label }} {% if required %}*{% endif %}
  </label>
  
  <input 
    type="text" 
    id="{{ id }}" 
    name="{{ name }}"
    placeholder="{{ placeholder }}" 
    value="{{ value }}"
    class="w-full 
      {{ input_text.states.border }} 
      {{ input_text.states.padding }} 
      {{ input_text.states.typography }}
      {{ input_text.variants[variant].input }}"
    {% if variant == "disabled" %}disabled{% endif %}
  />
  
  {% if variant == "critical" and errorMessage %}
  <p class="mt-1 text-sm text-red-600">{{ errorMessage }}</p>
  {% endif %}
</div>
{% endmacro %}


{% macro rendernavigation-secondary(options) %}
  {% set navigation-secondaryData = options.datas.navigation-secondarys | selectattr('name', 'equalto', options.name) | first %}
  {% set globalStyle = options.datas.globalStyle %}
  {% set variantStyle = options.datas.variants[navigation-secondaryData.style] %}
  
  {% if navigation-secondaryData %}
    <div 
      class="{{ globalStyle }} {{ variantStyle }}"
    >
      {{ navigation-secondaryData.text }}
    </div>
  {% else %}
    <span class="text-red-500">navigation-secondary not found</span>
  {% endif %}
{% endmacro %}



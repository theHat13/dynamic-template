<!-- Post card-->
<li>
    <article class="bg-gray-200 shadow-[0_4px_12px_-5px_rgba(0,0,0,0.4)] w-full max-w-sm rounded-lg overflow-hidden mx-auto font-[sans-serif] mt-4">
        <div class="min-h-[256px]">
            <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full">
        </div>
        <div class="p-6">

            <!-- Post items-->
            <h3 class="text-gray-800 text-xl font-bold">{{ post.data.title }}</h3>
            <p class="snippet__meta">by
                <span>{{ post.data.author }}</span>
                on
                <span>{{ post.data.date | postDate }}</span></p>
            <p class="my-4 text-sm text-gray-500 leading-relaxed">{{ post.data.description }}</p>
            <div class="flex justify-center">

                <!-- Card button-->
                {% set btnHref = post.url %}
                {% set btnLabel = 'Read more' %}
                {% set btnStyle = 'primary' %}
                {% include "03-atoms-buttons/button-link.njk" %}
            </div>
        </div>
    </article>
</li>